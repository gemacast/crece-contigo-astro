---
//Esta es la zona dividida por --- en donde podemos ejecutar codigo javasript
//import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
---
<Layout>
		<!--Banner principal -->
		
		<section class="py-5" style="background: linear-gradient(to bottom, #e3f2fd, #ffffff);">
			<div class="container">
				<div class="row align-items-center">
					<!--texto -->
					<div class="col-12 col-md-6 text-center text-md-start mb-5 mb-md-0 ps-md-5">
						<h2 class="display-2"> Explora tu crecimiento personal</h2>
						<h3 class="mt-4 h4 mb-4"> Los únicos limites son aquellos que tu mismo te pones</h3>
						<button class="btn btn-success btn-lg d-block mx-auto mx-md-0"> Comenzar</button>
						<p class="mt-3 text-muted text-center text-md-start">Sin registro. Empieza ahora gratis.</p>
					</div>
					<!--Imagen -->
					<div class="col-12 col-md-6 text-center">
						<img src="/images/CrecimientoPersonal.png" alt="Crecimiento Personal" class="img-fluid rounded mt-4 mt-md-0" style="max-height: 400px; max-width: 100%;">
					</div>
				</div>
			</div>
		</section>


		<!--Sección de temas destacados -->
		<section class="bg-secondary-subtle" >
			<div class="container py-5">
				<h2 class="text-center py-4">Descubre tus pilares de crecimiento</h2>
				<hr class="w-25 mx-auto text-primary mb-5">

				<div class="row">
					<div class="col-12 col-md-4">
						<article>
							<div class="card text-center p-3 bg-white shadow rounded my-4">
								<div class="card-body">
									<i class="fa-solid fa-brain fa-2xl text-primary mb-2"></i>
									<h3 class="card-title"> Autoconocimiento</h3>
									<p class="card-text"> Texto descriptivo del Autoconocimiento</p>	
									<button class="btn btn-primary" aria-label="Ver más sobre Autoconocimiento">Ver más</button>
								</div>
							</div>
						</article>	
					</div>
					
					<div class="col-12 col-md-4">
						<article>
							<div class="card text-center p-3 bg-white shadow rounded my-4">
								<div class="card-body">
									<i class="fa-solid fa-spa fa-2xl text-primary mb-2"></i>
									<h3 class="card-title">  Hábitos y Bienestar</h3>
									<p class="card-text">Texto descriptivo de Hábitos y Bienestar</p>
									<button class="btn btn-primary" aria-label="Ver más sobre Hábitos y Bienestar">Ver más</button>
								</div>
							</div>
						</article>
					</div>

					<div class="col-12 col-md-4">
						<article>
							<div class="card text-center p-3 bg-white shadow rounded my-4">
								<div class="card-body">
									<i class="fa-solid fa-bullseye fa-2xl text-primary mb-2"></i>
									<h3 class="card-title"> Metas y Productividad</h3>
									<p class="card-text">Texto descriptivo de Metas y Productividad</p>
									<button class="btn btn-primary" aria-label="Ver más sobre Metas y Productividad">Ver más</button>
								</div>
							</div>		
						</article>
					</div>
				</div>
			</div>	
		</section>

		<!-- Frase motivadora centrada -->
		 <section class="bg-light py-5">
			<div class="container">
				<div class="text-center my-5">
					<i class="fa-solid fa-quote-left fa-2xl mb-3 text-primary"></i>
					<blockquote class="display-6 fst-italic ">
						"Cada paso cuenta en tu camino"
					</blockquote>
				</div>
			</div>
		</section>
		
</Layout>		

	
